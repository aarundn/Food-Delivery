<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".fragments.loginfragments.SignInFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Adress"
            android:fontFamily="@font/sf_pro_rounded_semibold"
            android:textSize="18sp"
            android:textColor="@color/secondItemsAndIcons"/>
        <EditText
            android:id="@+id/loginEmailEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_rounded_semibold"
            android:textColor="@color/black"
            android:backgroundTint="@color/black"
            android:textColorHint="#7F7F80"
            android:inputType="textEmailAddress"
            android:hint="type your email"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/sf_pro_rounded_semibold"
            android:textSize="18sp"
            android:textColor="@color/secondItemsAndIcons"/>
        <EditText
            android:id="@+id/loginPassEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#7F7F80"
            android:fontFamily="@font/sf_pro_rounded_semibold"
            android:textColor="@color/black"
            android:backgroundTint="@color/black"

            android:inputType="textPassword"
            android:hint="type your Password"/>
        <TextView
            android:id="@+id/forgotPassText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgote passcode?"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/sf_pro_rounded_semibold"
            android:textSize="18sp"
            android:textColor="@color/orange"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="10dp">
            <ProgressBar
                android:id="@+id/loginProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/white"
                android:visibility="gone"
                android:layout_gravity="center"
                android:elevation="5dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/butto_backgroud"
                android:fontFamily="@font/sf_pro_rounded_semibold"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                />
        </FrameLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>