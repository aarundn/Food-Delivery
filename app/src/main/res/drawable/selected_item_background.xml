<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#4BFA4A0C" />
            <corners android:radius="20dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
    <!-- Content layer -->
    <item android:top="0dp" android:right="20dp" android:left="20dp" android:bottom="10dp">
        <shape android:shape="oval">
            <solid android:color="#00FA4A0C" /> <!-- Set your selected item's background color -->
            <corners android:radius="8dp" /> <!-- Adjust corner radius to match shadow layer -->
        </shape>
    </item>
</layer-list>
